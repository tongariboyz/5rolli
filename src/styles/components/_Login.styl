.LoginView
  size(100%)
  background: $orange500
  overflow: hidden
  display: flex
  align-items: center

.Login
  size(280px, 560px)
  margin: 0 auto
  text-align: center
  &__logo
    size(234px, 278px)
    padding: 24px 0
    margin: 0 auto
  &__form__submit
    box-sizing: border-box
    padding: 0 2%
    width: 100%
    &__btn
      border-radius(4px)
      box-shadow: none
      box-sizing: border-box
      color: $orange500
      margin: 0
      width: 100%
